 <div class="tasks"></div>
<% @tasks.each do |task| %>
<div class="message">
  <div class="message-name">
    <%if task.completed == true %>
    <h3><i class="fas fa-check-circle"></i> done</h3>
    <%elsif task.completed == false %>
    <h3><i class="fas fa-times-circle"></i> not done</h3>
    <%end%>
  </div>
  <div class="message-body">
    <p><strong>Title</strong></p>
    <p>
      <%= link_to task.title, task_path(task) %>
    </p>
  </div>
  <div class="message-status">
    <p><%= link_to "Edit", edit_task_path(task) %></p>
    <p>
      <%= link_to task_path(task), method: :delete do %>
      <i class="far fa-trash-alt"></i>
      <% end %>
    </p>
  </div>
</div>
<%end%>
</div>

<%=link_to "New task", new_task_path, :class => "btn btn-warning" %>
</div>


