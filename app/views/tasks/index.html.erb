<h1>My task</h1>
<ul>
<% @tasks.each do |task| %>
<li>
  <%if task.completed == true %>
    &#9745; <%= link_to task.title, task_path(task) %>
    <%= link_to "Edit", edit_task_path(task) %>
    <%= link_to "delete", task_path(task), method: :delete %>
  <%elsif task.completed == false %>
    &#9744; <%= link_to task.title, task_path(task) %>
    <%= link_to "Edit", edit_task_path(task) %>
    <%= link_to "delete", task_path(task), method: :delete %>
</li>
  <% end %>
<% end %>
</ul>
<%=link_to "New task", new_task_path%>
