<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control',:readonly => true %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control',:readonly => true  %>
  </div>

  <div class="form-group">
    <%= f.label :completed %>
    <%= f.check_box :completed, :disabled => true %>
  </div>
<% end %>

<%=link_to "Change Task", edit_task_path, :class => "btn btn-info back" %>
<%=link_to "All Tasks", tasks_path, :class => "btn btn-warning back" %>

